<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
  PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
  "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
  <properties resource="application.properties"/>

  <classPathEntry location="D:\\mysql-connector-java-5.1.39.jar" />

  <context id="Mysql" targetRuntime="MyBatis3" defaultModelType="flat">

    <commentGenerator>
      <!--  关闭自动生成的注释  -->
      <property name="suppressAllComments" value="true" />
    </commentGenerator>

    <jdbcConnection driverClass="${spring.datasource.driverClassName}"
      connectionURL="${spring.datasource.url}"
      userId="${spring.datasource.username}"
      password="${spring.datasource.password}">
    </jdbcConnection>

    <javaModelGenerator targetPackage="com.itclj.model" targetProject="src/main/java"/>

    <sqlMapGenerator targetPackage="com.itclj.dao" targetProject="src/main/java"/>

    <javaClientGenerator targetPackage="com.itclj.dao" targetProject="src/main/java" type="XMLMAPPER"/>

    <table schema="sakila" tableName="stu" domainObjectName="StuBean"></table>

  </context>
</generatorConfiguration>